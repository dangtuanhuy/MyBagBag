@model IEnumerable<BagBag.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdministratorLayout.cshtml";
}

<h2 class="text-center">DANH MỤC SẢN PHẨM</h2>

<p>
    <a href="@Url.Action("Create", "Categories")" class="btn btn-info">
        Tạo Mới
    </a>
</p>
<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr >
            <th class="text-center" >
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.CategoryDetails)
            </th >
            <th class="text-center">Xử lý</th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryDetails)
                </td>
                <td class="text-center">
                    <a href="@Url.Action("Edit", "Categories", new { id = item.CategoryId })" class="btn btn-success">
                        <i class="fa fa-pencil"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Details", "Categories", new { id = item.CategoryId })" class="btn btn-primary">
                        <i class="fa fa-list-alt"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Delete", "Categories", new { id = item.CategoryId })" class="btn btn-danger">
                        <i class="fa fa-trash-o"></i>
                        <span>

                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

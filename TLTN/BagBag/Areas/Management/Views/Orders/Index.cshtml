@model IEnumerable<BagBag.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdministratorLayout.cshtml";
}


<h2 class="text-center">Management Order</h2>

<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr class="text-center">
            <th>
                Order Date
            </th>
            <th>
                Require Date
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
            <th>
                Status
            </th>
            <th>
                Customer Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiredDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderPhone)
                </td>
                @if (item.Order_Status == true)
                {
                    <td class="text-center">
                        Yes
                    </td>
                }
                else
                {
                    <td class="text-center">
                        No
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerFullName)
                </td>
                <td>


                    <a href="@Url.Action("PrintOrder", "Orders", new { id = item.OrderId })" class="btn btn-primary">
                        <i class="fa fa-print"></i>
                        <span>

                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

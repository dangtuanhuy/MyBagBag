@model BagBag.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Management/Views/Shared/_PrintForm.cshtml";
}

<h2 class="text-center">Details of Order</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Customer.CustomerFullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CustomerFullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.OrderAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderPhone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderPhone)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Order_Status)
        </dt>

        @if (Model.Order_Status == true)
        {
            <dd>
                Yes
            </dd>
        }
        else
        {
            <dd>
                No
            </dd>
        }



    </dl>
</div>


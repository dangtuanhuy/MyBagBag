@using BagBag.Models
@model List<CartItem>
@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
@if (Model == null || Model.Count == 0)
{
    <section class="section-paddings">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <p>Cart Empty</p>
                </div>
            </div>
        </div>
    </section>
}
else
{

    <section class="section-paddings">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>IMG</th>
                                    <th>Products Name</th>
                                    <th>Qty</th>

                                    <th>Status</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (CartItem item in Model)
                                {
                                    <tr>
                                        <td class="text-center"><img src="~/myImg/BagBag/@item.ImgPro.FirstOrDefault().Img_Product" width="50" height="50" /></td>

                                        <td>@item.ProductName</td>
                                        <td>
                                            <form action="@Url.Action("SuaSoLuong")" method="get">
                                                <input type="hidden" name="ProductId" value="@item.ProductId" />
                                                <input type="number" min="1" step="1" name="soluongmoi" value="@item.ProductQtyUser" />
                                                <button type="submit" class="btn btn-primary btn-sm"> Update </button>
                                            </form>
                                            @if (item.ProductQtyUser > item.ProductQty)
                                            {
                                            <td> Sorry Limit  @item.ProductQty</td>
                                        }
                                        else
                                        {
                                            <td>OK</td>
                                        }
                                            <td> @item.ProductSold.ToString("#,##0").Replace(',', '.') $ </td>
                                            <td> @item.Total.ToString("#,##0").Replace(',', '.') $ </td>

                                            <td> <a href="@Url.Action("XoaKhoiGio", new { ProductId = item.ProductId })" onclick="return confirm('Are you sure delete cart?');" class="btn btn-danger btn-sm">Delete</a> </td>
                                        </tr>
                                    }
                                <tr>
                                    <td></td>
                                    <td class="text-right">Qty:</td>
                                    <td> @Model.Sum(m => m.ProductQtyUser) </td>
                                    <td class="text-right">ToTal:</td>
                                    <td>@Model.Sum(m => m.Total).ToString("#,##0").Replace(',', '.') $ </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </section>
}
<section class="section-paddings">
    <div class="container">
        <div class="row">
            <div class=" col-md-12">
                @using (Html.BeginForm("ConfirmCheckOut_Post", "Cart"))
                {
                    bool ktra = true;
                    foreach (CartItem item in Model)
                    {
                        if (item.ProductQtyUser > item.ProductQty)
                        {
                            ktra = false;
                        }
                    }
                    if (ktra == true)
                    {
                        if (@Session["username"] == null)
                        {
                            <a class="btn btn-danger" href="@Url.Action("LoginCart", "LoginUser")">Check Out</a>
                        }
                        else
                        {
                            <a class="btn btn-danger" href="@Url.Action("ConfirmCheckOut", "Cart")">Check Out</a>
                        }
                    }
                    else
                    {
                        <a class="btn btn-danger" href="@Url.Action("XemGioHang", "Cart")" onclick="return confirm('Sorry! The number of products you purchased exceeds the allowed number');">Check Out</a>
                    }
                    <a class="btn btn-primary" href="@Url.Action("Index", "Home")">Continue shopping</a>
                }
            </div>

        </div>
    </div>
</section>


